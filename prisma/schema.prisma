generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id(map: "Users_pkey") @default(autoincrement())
  email     String     @unique(map: "email")
  password  String
  name      String?
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime   @default(now()) @updatedAt @db.Timestamptz(6)
  Category  Category[]
  expenses  Expense[]
  incomes   Income[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime @db.Timestamptz(6)
  category    String?
  userId      Int
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "fk_expense_user")
}

model Income {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime @db.Timetz(6)
  source      String?
  userId      Int
  createdAt   DateTime @default(now()) @db.Timetz(6)
  updatedAt   DateTime @default(now()) @updatedAt @db.Timetz(6)
  user        User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_income_user")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt DateTime? @default(now()) @db.Timestamptz(6)
  User      User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_category_user")

  @@unique([name, userId], map: "unique_category_user")
}
